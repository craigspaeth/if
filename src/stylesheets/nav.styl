.main-nav {
  position: fixed;
  top: 0;
  padding: 20px;
  z-index: 2;
  width: 100%;
  height: 70px
  max-height: 70px;
  transition: background-color 0.2s ease-in-out, color 0.2s ease-in-out, max-height 0.3s ease-in-out;    
}

.main-nav.active {
  background: white;
  border-bottom: 1px solid lighter-gray-color;
}

.main-nav.active .flat-button:not(.signup-button) {
  color: darkest-gray-color;
}

.main-nav.active .login-button {
  border: 1px solid lighter-gray-color;
}

.main-nav.active .main-nav-logo {
  background-image: url("images/logo.svg");
}

.main-nav .flat-button {
  background: transparent;
  letter-spacing: 2px;
  padding-right: 20px;
  padding-left: 20px;
}

.main-nav-links {
  position: absolute;
  right: 0;
}

.main-nav .login-button, .main-nav .signup-button {
  border: 1px solid rgba(255,255,255,0.3);
  padding: 8px 30px;
  margin-right: 20px;
}

.main-nav .login-button {
  margin-left: 20px;
}

.main-nav .signup-button {
  background: green-color;
  border-color: green-color;
}

.main-nav-logo {
  width: 190px;
  height: 40px;
  background: url("images/logow.svg") no-repeat center center;
  display: block;
  position: absolute;
  top: 14px;
  left: 20px;
}

.main-nav-hamburger {
  background: transparent;
  top: 23px;
  right: 25px;
  border: 0;
  background: url("images/hamburger.svg") no-repeat center center transparent;
  position: absolute;
  z-index: 5;
  width: 20px;
  height: 20px;
  display: none;
}

/* iPad (portrait) */
@media (max-width: 768px) {

  .main-nav-logo {
    background-image: url("images/logo.svg");
  }

  .main-nav {
    position: relative;
    padding: 0;
    padding-top: 70px;
    text-align: center;
    max-height: 0;
    overflow: hidden;
    outline: none;
    height: auto;
  }

  .main-nav-hamburger {
    display: block;
  }

  .main-nav-links {
    position: relative;
    background: darkest-gray-color;
    padding: 0 mobile-gutter-size;
  }

  .main-nav.active {
    max-height: 500px;
    border-bottom: 0;
  }

  .main-nav-links a {
    border-bottom: 1px solid darker-gray-color;
    padding: 13px 0 12px;
    color: white !important;
    font-size: lato-small;
  }

  .main-nav-links a:last-child {
    margin-bottom: mobile-gutter-size;
  }

  .main-nav .flat-button {
    display: block;
  }

  .main-nav .login-button {
    margin-right: (mobile-gutter-size / 2);
  }

  // MATH
  .main-nav .login-button, .main-nav .signup-button {
    width: "calc(50% - %s)" % (mobile-gutter-size / 2)
    margin: mobile-gutter-size 0 0 0;
    display: inline-block;
    vertical-align: top;
  }

  .main-nav .signup-button {
    margin-left: (mobile-gutter-size / 2);
  }
}
