@import 'lib'

.portfolio-section-buttons {
  margin: 60px 0;
}

.portfolio-section-buttons button {
  margin-right: 15px;
  background: rgba(0,0,0,0.5);
}

.portfolio-input-container {
  margin: 20px 0;
}

.portfolio-input {
  background: transparent;
  border: 0;
  outline: 0;
  width: 45px;
  height: 40px;
  margin: 0 5px;
  border: 1px solid rgba(255,255,255,0.3);
  font-family: 'Volkhov', serif;
  font-size: 19px;
  padding: 10px
}

.boxes-section-buttons {
  margin-top: 30px;
}

.boxes-section-buttons button {
  width: 250px;
  height: 250px;
  margin-right: 30px;
  margin-bottom: 30px;
  display: inline-block;
  vertical-align: top;
  background: rgba(0,0,0,0.5);
  line-height: 1.4em;
}

.boxes-section-buttons button:nth-of-type(3n+3) {
  margin-right: 0;
}