/* Add reset & import variables/mixins */

@import '../../node_modules/nib'
@import 'lib'
global-reset()

/* Global Tags */
body {
  font-family: 'Volkhov', serif;
  font-size: 19px;
  line-height: 1.4em;
  -webkit-font-smoothing: antialiased;
  -moz-font-smoothing: antialiased;
}

body, html {
  width: 100%;
  min-height: 100%;
}

a {
  text-decoration: none;
}

* {
  box-sizing: border-box;
}

/* Compoonents */
.larger-header {
  font-size: 42px;
  font-family: 'Lato', sans-serif;
  font-weight: 300;
  text-transform: uppercase;
  letter-spacing: 3px;
  line-height: 1.1em;
}

.large-header {
  font-size: 28px;
  font-family: 'Lato', sans-serif;
  font-weight: 500;
  text-transform: uppercase;
  letter-spacing: 3px;
  line-height: 1.2em;  
}

.small-header {
  font-size: 14px;
  font-family: 'Lato', sans-serif;
  font-weight: 900;
  text-transform: uppercase;
  letter-spacing: 3px;
  line-height: 1em;    
  margin-bottom: 3px;
}

.flat-button {
  font-family: 'Lato', sans-serif;
  font-size: 14px;
  text-transform: uppercase;
  letter-spacing: 3px;
  background: #e46d21;
  padding: 16px 30px;
  color: white;
  font-weight: 900;
  border: 0;
  outline: none;
  cursor: pointer;
}

.copy-section {
  width: 50%;
  max-width: 650px;
  margin-left: 60px;
  position: absolute;
}

.centered-content {
  width: 100%;
  position: absolute;
  text-align: center;
}

.content-section {
  width: 100%;
  min-height: 500px;
  position: relative;
  border-top: 1px solid #222;
  border-bottom: 1px solid #222;
}

/* Main nav */
.main-nav {
  position: fixed;
  top: 0;
  padding: 20px;
  z-index: 2;
  width: 100%;
}

.main-nav .flat-button {
  background: transparent;
  font-size: 12px;
  letter-spacing: 2px;
  padding-right: 20px;
  padding-left: 20px;
}

.main-nav-right {
  position: absolute;
  right: 0;
}

.main-nav .login-button, .main-nav .signup-button {
  border: 1px solid rgba(255,255,255,0.3);
  padding: 8px 30px;
  margin-right: 20px;
}

.main-nav .login-button {
  margin-left: 20px;
}

.main-nav .signup-button {
  background: #6eb14e;
  border-color: #6eb14e;
}

.main-nav-logo img {
  width: 160px;
  position: absolute;
  left: 20px;
}

/* Footer */
.main-footer {
  padding: 15px 20px;
}

.main-footer-logo img {
  width: 160px;
  display: inline-block;
  vertical-align: top;
}

.main-footer .flat-button {
  background: transparent;
  font-size: 12px;
  padding: 0;
  margin: 0 15px; 
}

.main-footer-right {
  display: inline-block;
  vertical-align: top;
  position: absolute;
  right: 0;
}

.main-footer .login-button, .main-footer .signup-button {
  border: 1px solid #5a5b59;
  padding: 8px 30px;
  margin: 0 10px;
}

.main-footer .signup-button {
  background: #5a5b59;
  border-color: #5a5b59;
  margin-right: 20px
}

/* Sections */
.hero-unit-copy {
  width: 800px;
  height: 250px;
  margin: auto;
  position: absolute;
  top: 50%;
  left: 50%;
  margin-left: -400px;
  margin-top: -125px;
  text-align: center;
}

.hero-unit h1 {
  margin-bottom: 20px;
}

.hero-unit .flat-button {
  margin-top: 20px;
}

.portfolio-section-buttons {
  margin: 60px 0;
}

.portfolio-section-buttons button {
  margin-right: 15px;
  background: rgba(0,0,0,0.5);
}

.portfolio-input-container {
  margin: 20px 0;
}

.portfolio-input {
  background: transparent;
  border: 0;
  outline: 0;
  width: 45px;
  height: 40px;
  margin: 0 5px;
  border: 1px solid rgba(255,255,255,0.3);
  font-family: 'Volkhov', serif;
  font-size: 19px;
  padding: 10px
}

.boxes-section-buttons {
  margin-top: 30px;
}

.boxes-section-buttons button {
  width: 250px;
  height: 250px;
  margin-right: 30px;
  margin-bottom: 30px;
  display: inline-block;
  vertical-align: top;
  background: rgba(0,0,0,0.5);
  line-height: 1.4em;
}

.boxes-section-buttons button:nth-of-type(3n+3) {
  margin-right: 0;
}
