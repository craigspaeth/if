.panel4 {
  clearfix();
  margin-bottom: section-margin;
}

.panel4 header, panel4-graph {
  float: left;
}

// MATH
.panel4 header {
  width: 50%;
  padding-right: (gutter-size / 2);
}

.panel4-graph {
  width: 50%;
  padding-left: (gutter-size / 2);
}

/* iPhone (portrait) */
@media (max-width: 667px) {
  
  .panel4 header {
    width: 100%;
    padding: 0;
  }
  
  .panel4-graph {
    width: 100%;
    padding-left: 0;
    margin-top: mobile-gutter-size;
  }
}
