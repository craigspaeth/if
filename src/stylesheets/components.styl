.larger-header {
  font-size: 42px;
  font-family: 'Lato', sans-serif;
  font-weight: 300;
  text-transform: uppercase;
  letter-spacing: 3px;
  line-height: 1.1em;
}

.large-header {
  font-size: lato-headline;
  font-family: 'Lato', sans-serif;
  font-weight: 500;
  text-transform: uppercase;
  letter-spacing: 3px;
  line-height: 1.2em;
}

.small-header {
  font-size: lato-body;
  font-family: 'Lato', sans-serif;
  font-weight: 900;
  text-transform: uppercase;
  letter-spacing: 3px;
  line-height: 1em;
  margin-bottom: 3px;
}

.flat-button {
  font-family: 'Lato', sans-serif;
  font-size: lato-body;
  text-transform: uppercase;
  letter-spacing: 3px;
  background: #e46d21;
  padding: 16px 30px;
  color: white;
  font-weight: 900;
  border: 0;
  outline: none;
  cursor: pointer;
}
