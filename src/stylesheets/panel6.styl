.panel6 {
  text-align: center;
  margin-bottom: section-margin;
}

.panel6-age {
  border: 0;
  border-bottom: 2px solid green-color;
  margin: 0 0 0 3px;
  font-size: vollkorn-headline;
  width: 26px;
  font-family: 'Volkhov', serif;
  outline: none;
  padding-bottom: 5px;
}

.panel6 h2 {
  margin-top: 20px;
  font-size: vollkorn-headline;
}

.panel6-radios {
  text-align: center;
  margin: (gutter-size * 2) 0;
}

.panel6-radios label {
  display: inline-block;
  margin-right: gutter-size;
  text-align: center;
  vertical-align: top;
}

.panel6-radios .small-header {
  display: block;
  margin-top: 10px;
}

.panel6-radios input {
  display: inline-block;
}

.panel6-radios small {
  font-size: vollkorn-small;
  color: gray-color;
  display: block;
  font-style: italic;
}

.panel6 .flat-button:not([disabled]) {
  background-color: orange-color;
}

.panel6 .flat-button:not([disabled]):hover {
  background-color: orange-light-color;
}
