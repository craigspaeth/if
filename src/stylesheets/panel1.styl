.panel1 {
  margin: (section-margin / 2) auto section-margin auto;
}

.panel1-items {
  clearfix();
}

.panel1-item {
  width: 33.33%;
  float: left;
  text-align: center;
  font-size: vollkorn-small;
  color: darker-gray-color;
}

.panel1-item h3 {
  color: green-color;
  margin: 20px auto 5px auto;
  line-height: 1.4em;
}

.panel1-item img {
  position: relative;
  left: 85px;
  z-index: 1;
}

.panel1 header {
  width: (col-width * 4) + (gutter-size * 3);
  margin: auto;
  text-align: center;
}

.panel1-item:nth-child(1) {
  padding-right: (gutter-size * 2/3);
}

.panel1-item:nth-child(2) {
  padding-right: (gutter-size * 1/3);
  padding-left: (gutter-size * 1/3);
}

.panel1-item:nth-child(3) {
  padding-left: (gutter-size * 2/3);
}

.panel1-graph svg {
  transition: margin-left 0.3s ease-in-out;
}

/* iPhone (portrait) */
@media (max-width: 667px) {

  .panel1 header {
    width: auto;
    text-align: left;
  }

  .panel1-item {
    width: 100%;
    float: none;
    text-align: left;
    padding: 0 !important;
  }
}
